<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7_Sqlite.Vistas.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE REGISTRO" FontSize="18" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtNombre" Placeholder="INGRESE NOMBRE"/>
            <Entry x:Name="txtUsuario" Placeholder="INGRESE EL USUARIO"/>
            <Entry x:Name="txtContrasenia" Placeholder="INGRESE LA CONTRASEÑA" IsPassword="True"/>
            <Button x:Name="btnIngresar" Text="INGRESAR" Clicked="btnIngresar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>