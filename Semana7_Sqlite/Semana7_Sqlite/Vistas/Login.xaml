<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7_Sqlite.Vistas.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE INICIO DE SESIÓN" FontSize="18" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese la Contraseña" IsPassword="True"/>
            
            <!--agrego botones-->
            <Button x:Name="btnInicio" Text="INICAR SESION" Clicked="btnInicio_Clicked"/>
            <Button x:Name="btnRegistro" Text="REGISTRO" Clicked="btnRegistro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>